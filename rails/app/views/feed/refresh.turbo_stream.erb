<% if @new_echos.any? %>
  <%= turbo_stream.prepend "echos_list" do %>
    <%= render partial: "feed/echos_batch", locals: { echos: @new_echos } %>
  <% end %>

  <turbo-stream
    action="dispatch_custom_event"
    event-name="feed:echos-updated"
    event-detail="<%= { latestId: @new_echos.first.id }.to_json %>">
  </turbo-stream>
<% end %>

