<% if @new_recordings.any? %>
  <%= turbo_stream.prepend "recordings_list" do %>
    <%= render partial: "feed/recordings_batch", locals: { recordings: @new_recordings } %>
  <% end %>

  <turbo-stream
    action="dispatch_custom_event"
    event-name="feed:recordings-updated"
    event-detail="<%= { latestId: @new_recordings.first.id }.to_json %>">
  </turbo-stream>
<% end %>

