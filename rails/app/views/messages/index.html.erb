<div data-controller="bridge--navigation-bar"
		 data-bridge--navigation-bar-hidden-value="true"
		 class="hidden"></div>

<div class="p-4 pt-safe-or-4 pb-safe-or-4">
	<h1 class="text-xl font-bold mb-4">대화 목록</h1>

	<% if @chat_rooms.any? %>
		<% @chat_rooms.each do |chat_room| %>
			<%= link_to echo_path(chat_room.echo), class: "block border p-3 mb-2 rounded bg-white hover:bg-gray-50" do %>
				<p class="font-semibold"><%= chat_room.other_user(current_user).email %></p>
				<p class="text-sm text-gray-500">
					마지막 메시지: <%= time_ago_in_words(chat_room.last_message_at) %> 전
				</p>
			<% end %>
		<% end %>
	<% else %>
		<div class="text-center py-12">
			<div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 mb-4">
				<svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
								d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
				</svg>
			</div>
			<p class="text-gray-500">아직 대화가 없습니다</p>
			<p class="text-sm text-gray-400 mt-2">피드에서 메아리에 답장을 보내보세요</p>
		</div>
	<% end %>
</div>

