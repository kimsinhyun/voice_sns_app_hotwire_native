<%#= render "shared/header", title: "로그인" %>

<div class="container flex items-center justify-center p-4">
  <div class="w-full max-w-md">
    <!-- 로고/아이콘 영역 -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-2">로그인</h1>
      <p class="text-gray-600 text-sm">음성 채팅을 시작하세요</p>
    </div>

    <!-- 로그인 폼 -->
    <div class="bg-white rounded-3xl shadow-xl p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
                   html: { 
                     class: "space-y-6",
                     data: { 
                       controller: "bridge--form",
                       bridge__form_submit_title_value: "로그인",
                       action: "input->bridge--form#handleInput"
                     }
                   }) do |f| %>
        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-[#F5A08D] focus:ring-2 focus:ring-[#F5A08D] focus:ring-opacity-20 transition-all outline-none",
              placeholder: "이메일을 입력하세요" %>
        </div>

        <div>
          <%= f.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-[#F5A08D] focus:ring-2 focus:ring-[#F5A08D] focus:ring-opacity-20 transition-all outline-none",
              placeholder: "비밀번호를 입력하세요" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "w-4 h-4 text-[#F5A08D] border-gray-300 rounded focus:ring-[#F5A08D]" %>
            <%= f.label :remember_me, "로그인 상태 유지", class: "ml-2 text-sm text-gray-600" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "로그인", 
              data: { bridge__form_target: "submit" },
              class: "w-full py-3 px-4 bg-gradient-to-r from-[#F5A08D] to-[#FFAA91] text-white font-semibold rounded-xl hover:shadow-lg transform hover:scale-[1.02] transition-all duration-200" %>
        </div>
      <% end %>

      <!-- 소셜 로그인 -->
      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-200"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-white text-gray-500">또는</span>
          </div>
        </div>

        <div class="mt-6 space-y-3">
          <!-- Google 로그인 (비활성화) -->
          <button disabled class="w-full flex items-center justify-center px-4 py-3 border border-gray-200 rounded-xl bg-gray-50 text-gray-400 cursor-not-allowed">
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
              <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Google로 계속하기
          </button>

          <!-- Kakao 로그인 (비활성화) -->
          <button disabled class="w-full flex items-center justify-center px-4 py-3 border border-gray-200 rounded-xl bg-gray-50 text-gray-400 cursor-not-allowed">
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
              <path fill="currentColor" d="M12 3c5.799 0 10.5 3.664 10.5 8.185 0 4.52-4.701 8.184-10.5 8.184a13.5 13.5 0 0 1-1.727-.11l-4.408 2.883c-.501.265-.678.236-.472-.413l.892-3.678c-2.88-1.46-4.785-3.99-4.785-6.866C1.5 6.665 6.201 3 12 3z"/>
            </svg>
            카카오로 계속하기
          </button>
        </div>
      </div>

      <!-- 회원가입 링크 -->
      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          계정이 없으신가요?
          <%= link_to "회원가입", new_user_registration_path, class: "font-semibold text-[#F5A08D] hover:text-[#FFAA91] transition-colors" %>
        </p>
      </div>
    </div>
  </div>
</div>
