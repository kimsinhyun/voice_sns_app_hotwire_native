<div class="bg-white rounded-lg shadow p-4 mb-4">
	<!-- 디버깅 정보 -->
	<div class="mb-4 text-xs text-gray-600 space-y-1">
		<div><strong>파일명:</strong> <%= recording.audio_file.filename %></div>
		<div><strong>Content Type:</strong> <%= recording.audio_file.content_type %></div>
		<div><strong>파일 크기:</strong> <%= number_to_human_size(recording.audio_file.byte_size) %></div>
		<div><strong>URL:</strong> <%= rails_blob_path(recording.audio_file, disposition: "inline") %></div>
	</div>

	<!-- 방법 1: audio_tag with rails_blob_path -->
	<div class="mb-3">
		<p class="text-sm font-semibold mb-1">방법 1: audio_tag + rails_blob_path</p>
		<%= audio_tag rails_blob_path(recording.audio_file, disposition: "inline"), 
								controls: true, 
								class: "w-full" %>
	</div>
</div>