<!-- 컴팩트 녹음 툴바 Partial -->
<div data-controller="bridge--compact-audio-recorder"
     data-bridge--compact-audio-recorder-submit-url-value="<%= submit_url %>"
     data-bridge--compact-audio-recorder-max-duration-value="<%= defined?(max_duration) ? max_duration : 10 %>"
     class="fixed bottom-0 left-0 right-0 pb-safe z-50 bg-[#E5DDD5] shadow-lg">
  
  <div class="relative flex items-center justify-between px-4 py-3">
    <%# 설정 버튼 - 주석처리 %>
    <%# link_to "/settings", data: { turbo_frame: "_top" }, class: "flex items-center justify-center w-10 h-10 text-gray-700 hover:text-gray-900 transition-colors" do %>
      <%# <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"> %>
        <%# <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" %>
              <%# d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/> %>
        <%# <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/> %>
      <%# </svg> %>
    <%# end %>
    
    <!-- 미리듣기 버튼 (조건부 표시) - 왼쪽 -->
    <button type="button"
            data-action="click->bridge--compact-audio-recorder#togglePlayback"
            data-bridge--compact-audio-recorder-target="playbackButton"
            class="invisible w-16 h-16  bg-opacity-20 hover:bg-opacity-30 active:scale-95 transition-all flex items-center justify-center">
      <!-- 재생 아이콘 -->
      <%= image_tag "play_btn.png", data: { bridge__compact_audio_recorder_target: "playIcon" }, class: "w-16 h-16" %>
      <!-- 중지 아이콘 -->
      <%= image_tag "stop_btn.png", data: { bridge__compact_audio_recorder_target: "stopIcon" }, class: "hidden w-16 h-16" %>
    </button>
    
    <!-- 녹음 버튼 (진행도 포함) - 정중앙 -->
    <button type="button"
            data-action="click->bridge--compact-audio-recorder#toggleRecording"
            data-bridge--compact-audio-recorder-target="recordButton"
            class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 rounded-full overflow-hidden hover:scale-105 active:scale-95 transition-transform">
      <!-- 배경 이미지 -->
      <%= image_tag "record_btn.png", class: "absolute inset-0 w-18 h-18" %>
      
      <!-- 진행도 오버레이 (왼쪽→오른쪽, 어두운 투명 레이어) -->
      <div data-bridge--compact-audio-recorder-target="recordProgress"
           class="absolute inset-0 bg-black bg-opacity-40 transition-all duration-100"
           style="clip-path: inset(0 100% 0 0);"></div>
    </button>
    
    <!-- 제출 버튼 (조건부 표시) - 오른쪽 -->
    <button type="button"
            data-action="click->bridge--compact-audio-recorder#submit"
            data-bridge--compact-audio-recorder-target="submitButton"
            class="invisible w-16 h-16  bg-opacity-20 hover:bg-opacity-30 active:scale-95 transition-all flex items-center justify-center">
      <!-- 전송 아이콘 -->
      <%= image_tag "send_btn.png", class: "w-16 h-16" %>
    </button>
  </div>
</div>

