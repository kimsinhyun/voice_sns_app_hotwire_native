{
  "settings": {
    "screenshots_enabled": true
  },
  "rules": [
    {
      "patterns": [
        "/feed$",
        "/$",
        "/echos/\\d+$",
        "/chat_rooms/\\d+$"
      ],
      "properties": {
        "pull_to_refresh_enabled": false,
        "navigation_bar_hidden": true
      }
    },
    {
      "patterns": [
        "/messages$",
        "/settings$"
      ],
      "properties": {
        "context": "default",
        "pull_to_refresh_enabled": false,
        "navigation_bar_hidden": true
      }
    },
    {
      "patterns": [
        "refresh_historical_location"
      ],
      "properties": {
        "presentation": "refresh"
      }
    },
    {
      "patterns": [
        "/login$",
        "/register$",
        "/password/*"
      ],
      "properties": {
        "context": "modal",
        "pull_to_refresh_enabled": false
      }
    },
    {
      "patterns": [
        "/logout$"
      ],
      "properties": {
        "presentation": "clear_all"
      }
    }
  ]
}

